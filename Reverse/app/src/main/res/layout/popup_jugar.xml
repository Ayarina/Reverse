<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/fondo_jugar_popup">

        <TextView
            android:id="@+id/texto_resultados"
            android:text="Resultados:"
            android:textSize="40sp"
            android:fontFamily="sans-serif-black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/puntuacion_popup"
            android:text="200"
            android:textSize="40sp"
            android:fontFamily="sans-serif-black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="142dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/texto_resultados"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tiempo_popup"
            android:text="00:00,000"
            android:textSize="40sp"
            android:fontFamily="sans-serif-black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="85dp"
            android:layout_below="@id/puntuacion_popup"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tiempo_popup"
            android:orientation="horizontal"

            >

            <Button
                android:id="@+id/reintentar_popup"
                android:text="Volver a jugar"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center"
                />

            <Button
                android:id="@+id/salir_popup"
                android:text="Salir"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:gravity="center"
                />

        </LinearLayout>

</RelativeLayout>