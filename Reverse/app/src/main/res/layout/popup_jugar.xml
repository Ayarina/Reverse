<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="315dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/fondo_jugar_popup">

        <View
            android:id="@+id/barra_vertical_1"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="35dp"
            android:background="@color/black"
            />

        <TextView
            android:id="@+id/texto_resultados"
            android:text="Tus puntos:"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:layout_below="@id/barra_vertical_1"
            />

        <TextView
            android:id="@+id/puntuacion_popup"
            android:text="0"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="216dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_below="@id/barra_vertical_1"
            />

        <View
            android:id="@+id/barra_vertical_2"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            android:layout_below="@id/puntuacion_popup"
            />



        <TextView
            android:id="@+id/tiempo_popup"
            android:text="00:00"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="120dp"
            android:layout_marginLeft="120dp"
            android:background="@drawable/circulo"
            android:gravity="center"
            android:layout_below="@+id/barra_vertical_2"
             />

        <Button
            android:id="@+id/reintentar_popup"
            android:text="@string/boton_reintentar"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/gris_oscuro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:gravity="center"
            android:layout_below="@id/tiempo_popup"
             />

        <Button
            android:id="@+id/salir_popup"
            android:text="@string/boton_salir"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/gris_oscuro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:gravity="center"
            android:layout_below="@id/reintentar_popup"
            />


</RelativeLayout>